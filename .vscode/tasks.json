{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",                // Add debugging information
                "${workspaceFolder}/your_file.cpp", // Adjust to your source file
                "-o", "${workspaceFolder}/app" // Output executable
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
